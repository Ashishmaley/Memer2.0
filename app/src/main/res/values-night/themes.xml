<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ApiMaster" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#CCFF90</item>
        <item name="colorPrimaryVariant">#F680D8FF</item>
        <item name="colorOnPrimary">#4CBEBE</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#0D0C0C</item>
        <item name="colorSecondaryVariant">#0A0A0A</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="softCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">300dp</item>
        <item name="color">@color/white</item>
    </style>
</resources>